{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug 1.cpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/1.out", // Asegúrate de que este es el nombre del archivo ejecutable generado
            "args": [], // Argumentos para pasar al programa, si los hay
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilita la impresión automática de formato",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build 1.cpp", // Actualizado para coincidir con el nombre de la tarea en tasks.json
            "miDebuggerPath": "/usr/bin/gdb"
        },
